<html>
  <head>
    <title>{{title}}</title>
  </head>
  <body>
    <can-import from="bithub-admin/styles.less!" />
    <can-import from="bithub-admin/app" export-as="viewModel" />
	<can-import from="bithub-admin/components/home-page.component!" />
    <can-import from="bithub-admin/components/hub-page.component!" />

    <h1>Bithub</h1>

	{{#if session}}
		<hub-page></hub-page>
	{{else}}
		<home-page {(user)}="user" {(session)}="session"></home-page>
	{{/if}}

    {{#switch env.NODE_ENV}}
      {{#case "production"}}
        <script src="{{joinBase 'node_modules/steal/steal.production.js'}}"  main="bithub-admin/index.stache!done-autorender"></script>
      {{/case}}
      {{#default}}
        <script src="/node_modules/steal/steal.js"></script>
      {{/default}}
    {{/switch}}
  </body>
</html>
